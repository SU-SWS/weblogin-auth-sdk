{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "nodenext",
    "declaration": true,
    "target": "es2022",
    "allowJs": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}